<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/selected_primary_color</item>
        <item name="colorPrimaryDark">@color/selected_primary_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--HomeActivity-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/action_mode_primary_color</item>
    </style>

    <!--Toolbar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>


    <!--对话框-->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
